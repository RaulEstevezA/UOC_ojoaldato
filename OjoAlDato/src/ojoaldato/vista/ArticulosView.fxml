<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ojoaldato.vista.ArticulosViewController"
      spacing="20">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- =================================================== -->
    <!-- MENÚ PRINCIPAL DE GESTIÓN DE ARTÍCULOS -->
    <!-- =================================================== -->
    <VBox fx:id="menuBox" spacing="10" visible="true" managed="true">
        <Label text="Gestión de Artículos"
               style="-fx-font-size: 22px; -fx-font-weight: bold;" />

        <Button text="Añadir Artículo" onAction="#mostrarFormulario" maxWidth="200"/>
        <Button text="Mostrar Artículos" onAction="#mostrarTabla" maxWidth="200"/>
    </VBox>


    <!-- =================================================== -->
    <!-- SECCIÓN PARA AÑADIR ARTÍCULO -->
    <!-- =================================================== -->
    <VBox fx:id="formularioBox" spacing="12" visible="false" managed="false">

        <Label text="Añadir Artículo"
               style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <GridPane hgap="10" vgap="10">

            <Label text="Código del Artículo:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="txtCodigo" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Descripción:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="txtDescripcion" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="PVP:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="txtPvp" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Gastos de envío:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="txtGastosEnvio" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label text="Tiempo de preparación (min):" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="txtTiempoPreparacion" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <Label text="Stock:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <TextField fx:id="txtStock" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        </GridPane>

        <HBox spacing="10">
            <Button text="Guardar" onAction="#onAgregarArticulo"/>
            <Button text="Cancelar" onAction="#onCancelar"/>
        </HBox>

    </VBox>


    <!-- =================================================== -->
    <!-- SECCIÓN PARA MOSTRAR ARTÍCULOS -->
    <!-- =================================================== -->
    <VBox fx:id="tablaBox" spacing="12" visible="false" managed="false">

        <Label text="Listado de Artículos"
               style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <TableView fx:id="tablaArticulos" prefHeight="400">
            <columns>
                <TableColumn fx:id="colCodigo" text="Código" prefWidth="120"/>
                <TableColumn fx:id="colDescripcion" text="Descripción" prefWidth="220"/>
                <TableColumn fx:id="colPvp" text="PVP" prefWidth="100"/>
                <TableColumn fx:id="colGastosEnvio" text="Gastos de envío" prefWidth="120"/>
                <TableColumn fx:id="colTiempoPreparacion" text="Tiempo de preparación" prefWidth="120"/>
                <TableColumn fx:id="colStock" text="Stock" prefWidth="80"/>
            </columns>
        </TableView>

        <Button text="Volver al menú" onAction="#mostrarMenu" maxWidth="200"/>
    </VBox>

</VBox>
