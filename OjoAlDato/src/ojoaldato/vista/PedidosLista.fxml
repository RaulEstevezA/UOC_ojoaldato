<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="ojoaldato.vista.PedidosListaController"
            style="-fx-padding: 20;">

    <top>
        <Label text="Lista de Pedidos" 
               style="-fx-font-size: 18px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <TableView fx:id="tablaPedidos" style="-fx-padding: 10;">
            <columns>
                <TableColumn fx:id="colNumPedido" text="Nº Pedido" prefWidth="80"/>
                <TableColumn fx:id="colCliente" text="Cliente" prefWidth="200"/>
                <TableColumn fx:id="colArticulo" text="Artículo" prefWidth="150"/>
                <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="80"/>
                <TableColumn fx:id="colFecha" text="Fecha" prefWidth="150"/>
                <TableColumn fx:id="colEstado" text="Estado" prefWidth="100"/>
                <TableColumn fx:id="colTotal" text="Total" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <Button text="Volver" onAction="#volver" 
                style="-fx-padding: 5 15 5 15; -fx-font-size: 14px;"
                BorderPane.alignment="CENTER"/>
    </bottom>

</BorderPane>
