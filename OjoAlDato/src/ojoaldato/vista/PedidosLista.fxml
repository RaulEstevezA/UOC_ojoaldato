<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="ojoaldato.vista.PedidosListaController"
            style="-fx-padding: 20;">

    <top>
        <Label text="Lista de Pedidos" 
               style="-fx-font-size: 18px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <TableView fx:id="tablaPedidos" style="-fx-padding: 10;">
            <columns>
                <TableColumn fx:id="colNumPedido" text="Nº Pedido" prefWidth="80"/>
                <TableColumn fx:id="colCliente" text="Cliente" prefWidth="250"/>
                <TableColumn fx:id="colArticulo" text="Artículo" prefWidth="200"/>
                <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="80"/>
                <TableColumn fx:id="colFecha" text="Fecha" prefWidth="200"/>
                <TableColumn fx:id="colTotal" text="Total" prefWidth="100"/>
                <!-- Columna de estado oculta -->
                <TableColumn fx:id="colEstado" text="Estado" visible="false"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Volver" onAction="#volver" 
                    style="-fx-padding: 5 15 5 15; -fx-font-size: 14px;"/>
            <Button text="Cancelar Pedido" onAction="#cancelarPedido" 
                    style="-fx-padding: 5 15 5 15; -fx-font-size: 14px; -fx-background-color: #ff6b6b; -fx-text-fill: white;"
                    fx:id="btnCancelarPedido"/>
        </HBox>
    </bottom>

</BorderPane>
