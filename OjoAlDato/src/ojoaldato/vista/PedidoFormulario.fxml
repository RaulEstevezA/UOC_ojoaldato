<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="ojoaldato.vista.PedidoFormularioController"
          hgap="10" vgap="10"
          style="-fx-padding: 20;">

    <Label text="Nuevo Pedido" 
           style="-fx-font-size: 18px; -fx-font-weight: bold;"
           GridPane.columnIndex="0" GridPane.rowIndex="0"
           GridPane.columnSpan="2"/>

    <!-- Fila 1 -->
    <Label text="Cliente:" 
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <ComboBox fx:id="comboClientes" 
              GridPane.columnIndex="1" GridPane.rowIndex="1"
              prefWidth="200"/>

    <!-- Fila 2 -->
    <Label text="Artículo:" 
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <ComboBox fx:id="comboArticulos" 
              GridPane.columnIndex="1" GridPane.rowIndex="2"
              prefWidth="200"/>

    <!-- Fila 3 -->
    <Label text="Cantidad:" 
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="txtCantidad" 
               GridPane.columnIndex="1" GridPane.rowIndex="3"
               prefWidth="100"/>

    <!-- Fila 4 -->
    <Label text="Estado:" 
           GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <ComboBox fx:id="comboEstado" 
              GridPane.columnIndex="1" GridPane.rowIndex="4"
              prefWidth="150"/>
              <!-- Los items se cargarán desde el controlador -->

    <!-- Fila 5 - Botones -->
    <HBox spacing="10" 
          GridPane.columnIndex="0" GridPane.rowIndex="5"
          GridPane.columnSpan="2"
          alignment="CENTER">
        <Button text="Guardar" onAction="#guardarPedido" 
                defaultButton="true"/>
        <Button text="Cancelar" onAction="#cancelar" 
                cancelButton="true"/>
    </HBox>

    <!-- Estilos y configuraciones adicionales -->
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

</GridPane>
