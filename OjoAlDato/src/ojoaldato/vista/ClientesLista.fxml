<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="ojoaldato.vista.ClientesListaController"
      spacing="10"
      style="-fx-padding: 10;">

    <!-- TÃ­tulo -->
    <Label text="Listado de Clientes"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Tabla -->
    <TableView fx:id="tablaClientes" prefHeight="300" prefWidth="600">
        <columns>

            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150" />
            <TableColumn fx:id="colDomicilio" text="Domicilio" prefWidth="150" />
            <TableColumn fx:id="colNif" text="NIF" prefWidth="100" />
            <TableColumn fx:id="colEmail" text="Email" prefWidth="200" />
            <TableColumn fx:id="colTipo" text="Tipo" prefWidth="100" />

        </columns>
    </TableView>

</VBox>
